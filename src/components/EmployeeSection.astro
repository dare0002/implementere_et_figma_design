---
import EmployeeCard from "./EmployeeCard.astro";

const { data, theme = "light" } = Astro.props;
---

<section>
  <article>
  {data.map((employee) => <EmployeeCard {employee} />)}
  </article>
</section>

<style>
  @layer components {
    [data-theme="dark"] {
      --text-section: #fff;
      --text-card: #fff;
    }

    article {
      --bg-section: #fff;
      --bg-card: #fff;
      color: var(--text-section);
      background: var(--bg-section);

      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: 1.5rem;
    }

    @container (width < 700px) {
      article {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
    }
  }

</style>




