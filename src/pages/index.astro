import Newsletter from '../components/Newsletter.astro';

const employeeData = await fetch("https://raw.githubusercontent.com/dare0002/frontend-design/main/resources/json/employees.json").then((res) => res.json());

import { Icon } from 'astro-icon/components';
import Experience from '../components/Experience.astro';
import Expect from '../components/Expect.astro';

const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/*.{jpeg,jpg,png,gif}');
const aboutImage = images['/src/assets/images/about-hero.jpg'];

if (!aboutImage) {
  throw new Error(`Image "about-hero.jpg" does not exist in glob: "src/assets/images".`);
}

